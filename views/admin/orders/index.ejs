<% layout('./layouts/adminboilerplate.ejs') %>

<h3>Orders Mangement Panel</h3>

<div class="table-responsive">
    <table class="table">
  <thead>
    <tr>
      <th scope="col">Order Id</th>
      <th scope="col">Customer</th>
      <th scope="col">Amount</th>
      <th scope="col">Status</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    <% for(order of orders) { %>
    <tr>
      <th scope="row"><%= order._id %></th>
      <td><%= order.customer.name %></td>
      <td><%= order.totalAmount %></td>
      <td><%= order.status %></td>
      <td><form action="/admin/orders/<%= order._id %>/accept"><button>Accept</button></form></td>
      <td><form action="/admin/orders/<%= order._id %>"><button>View</button></form></td>
    </tr>
    <% } %>
  </tbody>
</table>

</div>