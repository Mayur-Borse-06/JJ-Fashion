<header>
  <h1>JJ Fashion</h1>
  <nav>
    <ul>
      <% if (!currentUser) { %>
      <!-- Guest Navbar -->
      <li><a href="/">Home</a></li>
      <li><a href="/">Shop</a></li>
      <li><a href="/customer/login">Login</a></li>
      <li>
        <a href="/customer/cart">
          <i
            class="fa-solid fa-cart-shopping"
            style="color: rgb(235, 235, 235)"
          ></i>
        </a>
      </li>
      <% } else if (currentUser.isAdmin) { %>
      <!-- Admin Navbar -->
      <li><a href="/admin/products">All Products</a></li>
      <li><a href="/admin/products/new">New Product</a></li>
      <li><a href="/customer/logout">Logout</a></li>
      <% } else { %>
      <!-- Customer Navbar -->
      <li><a href="/">Home</a></li>
      <li><a href="/">Shop</a></li>
      <li><a href="/orders">Orders</a></li>
      <li><a href="/customer/logout">Logout</a></li>
      <li>
        <a href="/customer/cart">
          <i
            class="fa-solid fa-cart-shopping"
            style="color: rgb(235, 235, 235)"
          ></i>
        </a>
      </li>
      <% } %>
    </ul>
  </nav>
</header>
